    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4FAFF"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/current_road_avis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/card"
            android:padding="5dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/avatar_user_1_avis"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="1dp"
                    app:civ_shadow="false"
                    app:civ_shadow_color="#8BC34A"
                    app:civ_shadow_radius="10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6_1_avis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Départ"
                    android:textColor="@color/blue_text"
                    android:textSize="10dp"
                    app:layout_constraintStart_toEndOf="@+id/avatar_user_1_avis"
                    app:layout_constraintTop_toTopOf="@+id/avatar_user_1_avis" />

                <TextView
                    android:id="@+id/myroads_current_departure_location_1_avis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/avatar_user_1_avis"
                    app:layout_constraintEnd_toEndOf="@+id/myroads_current_departure_places_1_avis"
                    app:layout_constraintStart_toStartOf="@+id/textView6_1_avis"
                    app:layout_constraintTop_toBottomOf="@+id/textView6_1_avis"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/myroads_current_departure_date_1_avis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/lato"
                    android:text="02/12/2019 07:50"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="@+id/avatar_user_1_avis"
                    app:layout_constraintTop_toBottomOf="@+id/avatar_user_1_avis" />

                <TextView
                    android:id="@+id/textView10_1_avis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Proposé par "
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/myroads_current_departure_username_1_avis"
                    app:layout_constraintEnd_toStartOf="@+id/myroads_current_departure_username_1_avis"
                    app:layout_constraintTop_toTopOf="@+id/myroads_current_departure_username_1_avis" />

                <TextView
                    android:id="@+id/myroads_current_departure_username_1_avis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/lato"
                    android:text="Eunice"
                    android:textColor="@color/blue_text"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/myroads_current_departure_price_1_avis"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/myroads_current_departure_price_1_avis"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/myroads_current_departure_mode_1_avis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/lato"
                    android:text="Autoroute"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/myroads_current_departure_date_1_avis"
                    app:layout_constraintTop_toBottomOf="@+id/myroads_current_departure_date_1_avis" />

                <TextView
                    android:id="@+id/myroads_current_departure_price_1_avis"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@+id/myroads_current_departure_mode_1_avis"
                    app:layout_constraintStart_toEndOf="@+id/myroads_current_departure_mode_1_avis"
                    app:layout_constraintTop_toTopOf="@+id/myroads_current_departure_mode_1_avis"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/myroads_current_departure_places_1_avis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="3/4 places"
                    android:textColor="@color/blue_text"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/myroads_current_departure_date_1_avis"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/myroads_current_departure_date_1_avis" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
