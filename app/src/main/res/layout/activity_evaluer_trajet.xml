        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@+id/current_road_avis"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/current_road_avis"
            app:layout_constraintTop_toBottomOf="@+id/current_road_avis">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Quelle note attribuée vous à ce trajet ?"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <RatingBar
                android:id="@+id/ratingBar_avis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/lato"
                android:text="Laisser un avis (facultatif)"
                android:textColor="@color/blue_text"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/avis_message"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/lato"
                android:gravity="start|top"
                android:hint="Entrez votre message ici"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <Button
                android:id="@+id/button_envoyer_avis"
                android:layout_width="168dp"
                android:layout_height="43dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/rounded_blue"
                android:fontFamily="@font/lato"
                android:text="Enregistrer"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratings_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_road_avis">

            <RatingBar
                android:id="@+id/ratingBar_avis_moyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
